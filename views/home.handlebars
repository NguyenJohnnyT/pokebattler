{{! If not logged in, show a splash screen, otherwise, show play a new game }}
<div class='row background'>
  {{#if loggedIn}}
    <div class='col row d-flex justify-content-center flex-column'>
      {{! <img
      src='https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/132.png'
    /> }}
      <div>Play!</div>
    </div>
  {{else}}
    <div class='col d-flex justify-content-center flex-row'>
      <img
        src='https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/132.png'
        style='border-radius: 20%; width: 500px; height: 500px;'
      />
      <div>Please login!</div>
    </div>
  {{/if}}
</div>